                    .col-md-12.col-sm-12.col-xs-12
                        .x_panel
                            .x_panel#test
                                .x_content
                                    section.content.invoice
                                        // title row
                                        .row
                                            .col-xs-12.invoice-header
                                                each dc in dctab
                                                    h1
                                                        i.fa.fa-globe
