                                                                                th(scope='row')
                                                                                td
                                                                                    b Religion:
                                                                                td #{hw1.strReligion}
                                                                                td
                                                                                td
                                                    #tab_content2.tab-pane.fade(role='tabpanel', aria-labelledby='educ-tab')
                                                        br
                                                        .col-md-12.col-sm-12.col-xs-12
                                                            .x_panel
                                                                table.table.table-striped
                                                                    thead
                                                                        th Type
                                                                        th Name
                                                                        th Address
                                                                        th Year
                                                                        th Skills/Awards
                                                                    tbody
                                                                        each hw2 in hw2tab
                                                                            tr
                                                                                td #{hw2.strType}
                                                                                td #{hw2.strSchoolName}
                                                                                td #{hw2.strSchoolAdd}
                                                                                td #{hw2.intSchoolGrad}
                                                                                td #{hw2.strSchoolSkill}
                                                    #tab_content3.tab-pane.fade(role='tabpanel', aria-labelledby='work-tab')
                                                        br
                                                        .col-md-12.col-sm-12.col-xs-12
                                                            .x_panel
                                                                table.table.table-striped
                                                                    thead
                                                                        th Name
                                                                        th Address
                                                                        th Position
                                                                        th From 
                                                                        th To
                                                                    tbody
                                                                        each hw3 in hw3tab
                                                                            tr
                                                                                td #{hw3.strWorkName}
                                                                                td #{hw3.strWorkAdd}
                                                                                td #{hw3.strWorkPosition}
                                                                                td #{hw3.intWorkStart}
                                                                                td #{hw3.intWorkEnd}
