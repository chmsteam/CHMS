        #editpic.modal.fade.modal-icon(tabindex='-1', role='dialog')
            .modal-dialog(role='document')
                form(method="POST"  action="/admin/profile_hw_:hwid/updatePic" enctype='multipart/form-data')
                    .modal-content
                        .modal-header(style="background-color:#EDEDED")
                            h2.modal-title Update Profile Picture
                                button.close(type='button', data-dismiss='modal', aria-label='Close')
                                    span(aria-hidden='true') Ã—
                        .modal-body
                            input#id(type='number' name='id', hidden)
                            .row
                                .col-md-12.text-center
                                    img#uploadPreview1(src="" style='width: 50%; height: 200px;')
                                    br
                                    br
                                    input.form-control.file-input(id="uploadImage1" type='file', name='postimage', accept='image/*' onchange="PreviewImage1();" style='width: 50%; margin-left:142px;')
