extends ../../../templates/navbaradmin.pug

block content
    section#services
        .right_col(role='main' style="background-color:transparent")
            .page-title
                .row
                    .col-md-12.col-sm-12.col-xs-12
                        .x_panel(style='background-color:rgba(52,152,219,.3)')
                            .x_title
                                button.btn.btn-primary.btn-lg(onclick="goBack()" style="float:right") 
                                    | Back
                                script.
                                    function goBack() {
                                        window.history.back();
                                    }
                                //- each list in listtab
                                //-     a(href='/admin/transaction_client_request_'+list.intRequestID)
                                //-         button.btn.btn-primary.pull-right.btn-lg(type='button') Back
                                center
                                    h3
                                        b Household Worker's Profile
                            .x_panel.wow.fadeInRight(style='background-color:#3E5367')
                                .x_content
                                    each hw1 in hw1tab
                                        .col-md-3.col-sm-3.col-xs-12.profile_left
                                            center
                                                .profile_img
                                                    #crop-avatar
                                                        // Current avatar
                                                        br
                                                        img.img-responsive.avatar-view(src='../images/'+hw1.strPicture, alt='Avatar', title='Change the avatar' style='widht:175px; height:200px')
                                                h2(style="text-transform: capitalize; color:white") 
                                                    b #{hw1.strLName}, #{hw1.strFName} #{hw1.strMName} 
                                                h5(style="text-transform: capitalize; color:white") ( #{hw1.strName} )
                                                button.btn.btn-success(data-toggle='modal', data-target='#editpic', data-id=hw1.intHWID, data-image=`../images/${hw1.strPicture}`) 
                                                    i.fa.fa-camera 
                                                    | &nbsp Upload
                                                
                                                each hw1 in hw1tab
                                                    if  hw1.stat == 'Deployed'
                                                        button.btn.btn-danger(type='button') 
                                                            i.fa.fa-exclamation-circle
                                                            | &nbsp Ban
                                                    else if hw1.stat =='Banned'
                                                        button.btn.btn-warning(type='button') 
                                                            i.fa.fa-mail-reply
                                                            Reinstate
                                            ul.list-unstyled.user_data(style="text-transform: capitalize; color:white") 
                                                li Age: &nbsp #{hw1.age}
                                                li Gender: &nbsp #{hw1.strGender}
                                                li
                                                    i.fa.fa-map-marker.user-profile-icon
                                                    |&nbsp #{hw1.strPAddress}
                                                li.m-top-xs
                                                    i.fa.fa-phone-square.user-profile-icon
                                                    |&nbsp #{hw1.strCellNum} / #{hw1.strTelNum} 
                                            //- a.btn.btn-success
                                            //-     i.fa.fa-edit.m-right-xs
                                            //-     | &nbspEdit Profile
                                        br
                                    .col-md-9.col-sm-9.col-xs-12
                                        .x_panel
                                            div(role='tabpanel', data-example-id='togglable-tabs')
                                                ul#myTab.nav.nav-tabs.bar_tabs(role='tablist')
                                                    li.active(role='presentation')
                                                        a#profile-tab(href='#tab_content1', role='tab', data-toggle='tab', aria-expanded='true') Profile
                                                    li(role='presentation')
                                                        a#educ-tab(href='#tab_content2', role='tab', data-toggle='tab', aria-expanded='false') Educational Background
                                                    li(role='presentation')
                                                        a#work-tab(href='#tab_content3', role='tab', data-toggle='tab', aria-expanded='false') Working Background
                                                    li(role='presentation')
                                                        a#ref-tab(href='#tab_content4', role='tab', data-toggle='tab', aria-expanded='false') Character References
                                                    li(role='presentation')
                                                        a#report-tab(href='#tab_content5', role='tab', data-toggle='tab', aria-expanded='false') Reports
                                                #myTabContent.tab-content
                                                    #tab_content1.tab-pane.fade.active.in(role='tabpanel', aria-labelledby='profile-tab')
                                                        // Profile
                                                        br
                                                        .col-md-12.col-sm-12.col-xs-12
                                                            .x_panel
                                                                table.table.table-striped
                                                                    each hw1 in hw1tab
                                                                        br
                                                                        tbody
                                                                            tr
                                                                                th(scope='row')
                                                                                td
                                                                                    b Date of Birth:
                                                                                td #{hw1.datBirthDay}
                                                                                td
                                                                                td
                                                                            tr
                                                                                th(scope='row')
                                                                                td
                                                                                    b Place of Birth:
                                                                                td #{hw1.strPofBirth}
                                                                                td
                                                                                td
                                                                            tr
                                                                                th(scope='row')
                                                                                td
                                                                                    b Civil Status:
                                                                                td #{hw1.strCivilStatus}
                                                                                td
                                                                                td
                                                                            tr
                                                                                th(scope='row')
                                                                                td
