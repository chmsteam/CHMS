                                                        .col-md-12.col-sm-12.col-xs-12
                                                            .x_panel
                                                                table.table.table-striped
                                                                    thead
                                                                        th Date of the Report
                                                                        th Client
                                                                        th Type of Incident
                                                                        th Reason
                                                                        th Action
                                                                    tbody
                                                                        each hw5 in hw5tab
                                                                            tr
                                                                                td #{hw5.datDateReported}
                                                                                td #{hw5.RFName} #{hw5.RLName}
                                                                                td #{hw5.strName}
