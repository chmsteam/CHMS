extends ../../../templates/navbaradmin.pug

block content
    section#services
        .right_col(role='main' style="background-color:transparent")
            div
                .page-title
                    .title_left
                        h5
                            a(href='clientList')
                                b
                    .row
                        .col-md-12.col-sm-12.col-xs-12
                            .x_panel(style='background-color:rgba(52,152,219,.3)')
                                .x_panel
                                    .x_title
                                        h1
                                            
                                        br
                                        .row
                                            .col-md-12.col-sm-12.col-xs-12
                                                form(method='POST' action='queries_client').form-inline
                                                    .form-group 
                                                        label Date From:
                                                            |&nbsp
                                                            |&nbsp
                                                            input.form-control(type='date', required='required', name='datefrom')
                                                        |&nbsp
                                                        |&nbsp
                                                        |&nbsp
                                                        label To:
                                                            |&nbsp
                                                            |&nbsp
                                                            input.form-control(type='date', required='required', name='dateto')
                                                        |&nbsp
                                                        |&nbsp
                                                        |&nbsp
                                                        label Status:
                                                            |&nbsp
                                                            |&nbsp
                                                            select.form-control(name='thestatus')
                                                                option(value='Registered') Registered
                                                                option(value='Banned') Banned
                                                        |&nbsp
                                                        |&nbsp
                                                        |&nbsp
                                                        label Residence:
                                                            |&nbsp
                                                            |&nbsp
                                                            select.form-control(id='residence' name='residence')
                                                                option(value='All') All
                                                                option(value='In Metro') Metro Manila
                                                                option(value='Out Metro') Outside Metro Manila
                                                        |&nbsp
                                                        |&nbsp
                                                        |&nbsp
                                                        label(id='NCRcities' style='display:none;') City:
                                                            |&nbsp
                                                            |&nbsp
                                                            select.form-control(name='city')
                                                                option(value='All') All
                                                                each item in itemtab
                                                                    option(value=''+item.strName) #{item.strName}
                                                    br
                                                    br
                                                    center
                                                        .form-group
                                                            |&nbsp
                                                            |&nbsp
                                                            |&nbsp
                                                            button.btn.btn-info(type='submit')
                                                                i.fa.fa-eye
                                                                |  Filter
                                        //- each thequery in thequerytab'
                                        hr
                                        br
                                        each resultdates in resultdateslist
                                            h1 Displaying results from #{resultdates.date1} to #{resultdates.date2}
                                        br
                                        br
                                        .col-md-12.col-sm-12.col-xs-12
                                            .table-responsive
                                                table#datatable.table.table-striped.jambo_table.table-bordered
                                                    thead
                                                        tr.headings
                                                        tr
                                                            th NAME
                                                            th DATE
                                                            th RESIDENCE
                                                            th ACTION
                                                    tbody
                                                        each theresults in theresultstab
                                                            if theresults == undefined
                                                            else
                                                                tr.even.pointer
                                                                    td #{theresults.strFName}
                                                                    td #{theresults.datDateRegistered}
                                                                    td #{theresults.strCity}
                                                                    td
                                                                        a(href='/admin/profile_client_'+theresults.intClientID)
                                                                            button.btn.btn-info(type='button')
                                                                                i.fa.fa-eye
                                                                                |  view
                                        .clearfix
    script(src='/admin/gentelella/vendors/jquery/dist/jquery.min.js')
    script(src='/admin/gentelella/vendors/moment/min/moment.min.js')
    script.
        $('#residence').change(function(){
            if($(this).val() == 'In Metro'){ 
                $('#NCRcities').show();
            }
            else{
                $('#NCRcities').hide();
            }
