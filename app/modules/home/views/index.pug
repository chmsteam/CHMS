                                                option(value='No') No
                                    .row
                                        h5
                                            b Type of Leave: 
                                            l#type
                                    .row
                                        .col-md-6
                                            h5
                                                b From: 
                                                l#start
                                        .col-md-6
                                            h5
                                                b To: 
                                                l#end
                                    .row
                                        h5
                                            b Address: 
                                            l#add
                                    .row
                                        .form-group
                                            h5
                                                b Reason:
